<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LinearLayoutBottomStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/colorLinLayBottBkg</item>
        <item name="android:paddingLeft">@dimen/paddingLeft</item>
        <item name="android:paddingTop">@dimen/paddingTop</item>
        <item name="android:paddingBottom">@dimen/marginBottom</item>
    </style>

    <style name="LinearLayoutHorizontalStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorLinLayBkg</item>
        <item name="android:paddingLeft">@dimen/paddingLeft</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">@dimen/textViewWidth</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">@string/view_text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorTextViewBkg</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom</item>
        <item name="android:layout_marginRight">@dimen/marginRight</item>
    </style>

    <style name="ImgBtnBottomStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/btnWidth</item>
        <item name="android:layout_height">@dimen/btnHeight</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">@dimen/marginRight</item>
    </style>

    <style name="BtnBottomStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/btnWidth</item>
        <item name="android:layout_height">@dimen/btnHeight</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">@dimen/marginRight</item>
    </style>
</resources>
